@model LittleHelpMVC.ViewModels.AddUserViewModel

<h4>New Helpers, Register here</h4>
<br/>
<form method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="Verify"></label>
        <input class="form-control" type="password" asp-for="Verify" />
        <span asp-validation-for="Verify"></span>
    </div>

    <input type="hidden" name= "UserId" value="@Model.UserId"/>

    <input type="submit" value="Register" />
</form>
