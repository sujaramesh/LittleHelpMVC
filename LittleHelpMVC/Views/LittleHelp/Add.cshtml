@model LittleHelpMVC.ViewModels.AddHelpViewModel
<h2>Add an entry</h2>
<form asp-controller="LittleHelp" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contact"></label>
        <input class="form-control" asp-for="Contact" />
        <span asp-validation-for="Contact"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <input class="form-control" asp-for="Comment" />
    </div>
    <button>Add</button>
</form>