<h3>@ViewBag.Title</h3>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Contact Info</th>
        <th>Description</th>
        <th>Category</th>
        <th>Edit Entries</th>
    </tr>
    @foreach (var help in Model)

    {
        <tr>
            <td>@help.Name</td>
            <td>@help.Contact</td>
            <td>@help.Description</td>
            <td>@help.Category.Name</td>
            <td><a asp-controller="LittleHelp" asp-action="Edit" asp-route-id="@help.ID">Edit</a></td>
        </tr>
    }
</table>

