@model LittleHelpMVC.ViewModels.AddEditHelpViewModel
<h2>Edit Entry</h2>

<form asp-controller="LittleHelp" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label><br />
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Contact"></label>
        <input class="form-control" asp-for="Contact" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <input type="hidden" asp-for="HelpId" />
    <button>Add</button>

</form>
<p><a asp-controller="LittleHelp" asp-action="Index">Logout</a></p>